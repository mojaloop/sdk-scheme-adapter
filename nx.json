{
  "extends": "nx/presets/npm.json",
  "pluginsConfig": {
    "@nx/js": {
      "analyzePackageJson": false
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build:openapi",
          "build:openapi:inbound",
          "build:openapi:outbound",
          "build:dto:outbound",
          "lint",
          "lint:fix",
          "test",
          "test:unit",
          "test:int",
          "validate:api",
          "validate:api:in",
          "validate:api:out",
          "validate:api-sequence-diagram",
          "updates:check",
          "updates:update",
          "dep:check",
          "dep:update",
          "release",
          "snapshot",
          "service",
          "watch",
          "dev",
          "pretest",
          "standard",
          "copy-files",
          "test:integration",
          "test:coverage",
          "test:coverage-check"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    }
  },
  "affected": {
    "defaultBase": "master"
  }
}
